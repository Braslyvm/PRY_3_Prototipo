@page
@model PRY_3.Pages.MenuModel
@{
    ViewData["Title"] = "Gestión de Menú";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #e3f2f5;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center; 
            align-items: center; 
            height: 100vh;
            color: #333;
        }
        
        .container {
            width: 90%;
            max-width: 400px;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        h1 {
            font-size: 3rem;
            color: #161616;
            margin-bottom: 20px;
        }

        form {
            margin-bottom: 15px;
        }

        button {
            width: 100%;
            padding: 14px;
            background-color: #1f45ad;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        button:hover {
            background-color: #f1f51b;
            transform: scale(1.02);
        }

        .language-selector {
            margin-top: 15px;
            font-size: 0.9rem;
        }
         .language-selector {
            position: absolute;
            top: 30px;
            right: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Super Lucky</h1>

        <form method="get" action="/ventas">
            <button type="submit">Gestión de Ventas</button>
        </form>

        <form method="get" action="/Usuarios">
            <button type="submit">Gestión de Usuarios</button>
        </form>

        <form method="get" action="/Inventario">
            <button type="submit">Gestión de Inventario</button>
        </form>

        <form method="get" action="/Reportes">
            <button type="submit">Gestión de Reportes</button>
        </form>

        <div class="language-selector">
            <label for="language">Idioma:</label>
            <select id="language" name="language" onchange="changeLanguage(this)">
                <option value="es" selected>Español</option>
                <option value="en">Inglés</option>
                <option value="ch">Mandarín</option>
            </select>
        </div>
    </div>

    <script>
        function changeLanguage(select) {
            const selectedLanguage = select.value;
            window.location.href = `/Menu?lang=${selectedLanguage}`;
        }
    </script>
</body>
</html>

