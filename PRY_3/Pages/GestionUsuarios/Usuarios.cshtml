@page
@model PRY_3.Pages.UsuariosModel
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #e9f7ef; /* Color de fondo verde claro */
            margin: 0;
            padding: 20px;
        }

        .content {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 800px; /* Máximo ancho para el contenido */
            margin: auto; /* Centrar el contenido */
        }

        h1 {
            color: #2e7d32; /* Color verde oscuro para el título */
            text-align: center; /* Centrar el título */
        }

        .btn {
            padding: 12px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            color: white;
            font-size: 16px;
            margin-right: 10px;
            transition: background-color 0.3s;
        }

        .btn-primary {
            background-color: #4caf50; /* Verde */
        }

        .btn-warning {
            background-color: #ffc107;
        }

        .btn-danger {
            background-color: #f44336;
        }

        .btn:hover {
            opacity: 0.9;
        }

        .search-form {
            display: inline-block;
            margin-left: 20px;
        }

        .search-form input[type="text"] {
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }

        .user-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .user-table th,
        .user-table td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: left;
        }

        .user-table th {
            background-color: #a5d6a7; /* Verde claro */
            color: #333;
        }

        .user-table tr:nth-child(even) {
            background-color: #f1f8e9; /* Verde muy claro */
        }

        .alert {
            padding: 15px; 
            margin-top: 20px;
            border-radius: 5px;
            font-size: 16px; 
        }

        .alert-success {
            background-color: #c8e6c9;
            color: #155724;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }

        .delete-button, .modify-button {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: none;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.164);
            cursor: pointer;
            transition-duration: 0.3s;
            position: relative;
        }

        .delete-button {
            background-color: #dc3545; /* Rojo */
        }

        .modify-button {
            background-color: #ffc107; /* Amarillo */
        }

        .delete-button:hover, .modify-button:hover {
            width: 90px;
            border-radius: 50px;
            background-color: #ff5722; 
        }

        .delete-svgIcon, .modify-svgIcon {
            width: 15px;
            transition-duration: 0.3s;
        }

        .delete-svgIcon path, .modify-svgIcon path {
            fill: white;
        }
        .delete-button:hover .delete-svgIcon, .modify-button:hover .modify-svgIcon {
            width: 20px;
            transform: rotate(360deg);
        }

        .delete-button::before, .modify-button::before {
            display: none;
            color: white;
            transition-duration: 0.3s;
            font-size: 12px;
        }

        .delete-button:hover::before {
            display: block;
            content: "Eliminar";
        }

        .modify-button:hover::before {
            display: block;
            content: "Modificar";
        }
        /* From Uiverse.io by alexruix */ 
        .group {
        display: flex;
        line-height: 28px;
        align-items: center;
        position: relative;
        max-width: 190px;
        }

        .input2 {
        height: 40px;
        line-height: 28px;
        padding: 0 1rem;
        width: 300px;
        padding-left: 2.5rem;
        border: 2px solid transparent;
        border-radius: 8px;
        outline: none;
        background-color: #D9E8D8;
        color: #0d0c22;
        box-shadow: 0 0 5px #C1D9BF, 0 0 0 10px #f5f5f5eb;
        transition: .3s ease;
        }

        .input2::placeholder {
        color: #777;
        }

        .icon {
        position: absolute;
        left: 1rem;
        fill: #777;
        width: 1rem;
        height: 1rem;
        }
    </style>
</head>
<body>
    <div class="content">
        <h1>Gestión de Usuarios</h1>

        <div class="group">
            <svg class="icon" aria-hidden="true" viewBox="0 0 24 24">
                <g>
                    <path d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z"></path>
                </g>
            </svg>
            <input placeholder="Search" type="search" class="input2" id="searchInput" onkeyup="filterUsers()">
        </div>

        <table class="user-table">
            <thead>
                <tr>
                    <th>Cédula</th>
                    <th>Nombre de Usuario</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody id="userList">
                @foreach (var user in Model.users)
                {
                    <tr id="user-@user.Cedula">
                        <td>@user.Cedula</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            <button class="modify-button" style="margin-top: 10px;">
                                <svg class="modify-svgIcon" viewBox="0 0 512 512">
                                    <path d="M362.3 0c-4.4 0-8.8 1.7-12.1 5l-34.3 34.3 47.6 47.6 34.3-34.3c6.7-6.7 6.7-17.6 0-24.3l-5.7-5.7c-3.3-3.3-7.7-5-12.1-5zm-108.6 34.3L0 384.3V512h127.7l253.7-253.7-34.3-34.3-253.7 253.7H64V384.3l253.7-253.7-34.3-34.3z"></path>
                                </svg>
                            </button>
                            <form method="post" asp-page-handler="Borrar" style="display:inline;">
                                <input type="hidden" name="cedula" value="@user.Cedula" />
                                <button type="submit" class="delete-button" style="margin-top: 10px;">
                                    <svg class="delete-svgIcon" viewBox="0 0 448 512">
                                        <path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"></path>
                                    </svg>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="alert alert-success" style="display: none;">Usuario agregado con éxito.</div>
        <div class="alert alert-danger" style="display: none;">Error al agregar usuario.</div>
    </div>

    <script>
        function filterUsers() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toLowerCase();
            const userList = document.getElementById('userList');
            const rows = userList.getElementsByTagName('tr');
            for (let i = 0; i < rows.length; i++) {
                const userName = rows[i].cells[1].innerText.toLowerCase();
                if (userName.startsWith(filter)) {
                    rows[i].style.display = ''; 
                } else {
                    rows[i].style.display = 'none'; 
                }
            }
        }
    </script>
</body>

