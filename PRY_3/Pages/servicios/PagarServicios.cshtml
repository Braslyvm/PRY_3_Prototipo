@page
@model TuNamespace.PagarServiciosModel
@{
    ViewData["Title"] = "Pagar Servicios";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ventana de Facturación de Productos</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #ffffff; 
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            background-color: white;
            border-radius: 5px;
            box-shadow: 0 4px 20px rgba(194, 120, 59, 0.1);
            padding: 20px;
            width: 90%;
            max-width: 1000px;
            text-align: center;
        }

        h1 {
            color: #1b1a1a;
            margin-bottom: 15px;
        }

        label {
            color: #4CAF50; 
            font-weight: bold;
            margin-bottom: 5px;
            display: block; 
        }

        .form-group {
            display: flex;
            align-items: center;
            margin: 10px 0;
            justify-content: space-between;
        }

        input, select {
            padding: 10px;
            border: 2px solid #4CAF50;
            border-radius: 5px;
            font-size: 16px;
            flex: 1;
            margin-left: 10px;
            transition: border-color 0.3s; 
        }

        input:focus, select:focus {
            border-color: #ff9966; 
            outline: none;
        }

        .button-container {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
        }

        button {
            position: relative;
            overflow: hidden;
            outline: none;
            cursor: pointer;
            border-radius: 5px;
            border: none;
            font-family: "Inter", sans-serif;
            padding: 1em 1.5em;
            color: white;
            background-image: linear-gradient(90.1deg, rgba(84, 212, 228, 1) 0.2%, rgba(68, 36, 164, 1) 99.9%);
            transition: all 0.3s ease;
        }

        button:hover {
            background-image: linear-gradient(90.1deg, rgba(68, 36, 164, 1) 0.2%, rgba(84, 212, 228, 1) 99.9%);
        }

        #formularioEspecifico {
            margin-top: 20px;
            width: 100%;
            display: flex;
            flex-direction: column;
        }

        #lucky {
            font-size: 2em;
            color: #fab142; 
            margin-bottom: 20px;
            text-shadow: 2px 2px 0 #fab142, -2px -2px 0 #1fdf0e;
        }
    </style>
</head>
<body>

<div class="container">
    <div id="lucky" style="text-align: center;">LUCKY</div>
    <h1>Pago de Servicios</h1>

    <form method="post">
        <div class="form-group">
            <label for="servicio">Servicio:</label>
            <select id="servicio" name="servicio" required>
                <option value=""></option>
                <option value="agua">Agua</option>
                <option value="luz">Luz</option>
                <option value="recibos">Recibos</option>
                <option value="recargas">Recargas</option>
            </select>
        </div>

        <div id="formularioEspecifico">
          
        </div>

        <div class="button-container">
            <button type="button" onclick="realizarPago()">Pagar</button>
            <button type="button" onclick="location.href='@Url.Page("NombreDeLaPaginaAnterior")'">Volver</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById('servicio').addEventListener('change', function() {
            const servicioSeleccionado = this.value;
            const formularioEspecifico = document.getElementById('formularioEspecifico');

            // Limpiar el formulario específico
            formularioEspecifico.innerHTML = '';

            // Agregar campos según el servicio seleccionado
            if (servicioSeleccionado === 'agua') {
                formularioEspecifico.innerHTML += '<div class="form-group"><label for="numeroCuenta">Número de Nis:</label><input type="text" id="numeroCuenta" name="numeroCuenta" required /></div>';
            } else if (servicioSeleccionado === 'luz') {
                formularioEspecifico.innerHTML += '<div class="form-group"><label for="codigoCliente">Código de Nise:</label><input type="text" id="codigoCliente" name="codigoCliente" required /></div>';
            } else if (servicioSeleccionado === 'recibos') {
                formularioEspecifico.innerHTML += '<div class="form-group"><label for="numeroRecibo">Número de Recibo:</label><input type="text" id="numeroRecibo" name="numeroRecibo" required /></div>';
            } else if (servicioSeleccionado === 'recargas') {
                formularioEspecifico.innerHTML += '<div class="form-group"><label for="numeroTelefono">Número de Teléfono:</label><input type="text" id="numeroTelefono" name="numeroTelefono" required /></div>';
            }
        });

        function calcularTotal() {
            
            const servicioSeleccionado = document.getElementById('servicio').value;
            let total = 0;

         
            switch (servicioSeleccionado) {
                case 'agua':
                    total = 20000; 
                    break;
                case 'luz':
                    total = 30000; 
                    break;
                case 'recibos':
                    total = 1500; 
                    break;
                case 'recargas':
                    total = 1000; 
                    break;
            }
            return total;
        }

        function realizarPago() {
            const total = calcularTotal();
            if (total > 0) {
                window.location.href = `/Pagos/Pago?montoTotal=${total.toFixed(2)}`;
            } else {
                alert("Por favor, selecciona un servicio válido.");
            }
        }
    </script>
}

</body>
</html>
