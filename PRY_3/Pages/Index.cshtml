@page
@model inicio_secionModel
@{
    ViewData["Title"] = "Inicio de sesión";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>


    <script src="js/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
    <link rel="stylesheet" 
href="https://cdn.jsdelivr.net/npm/sweetalert2@8/dist/sweetalert2.min.css">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: Arial, sans-serif;
            background-color: #eeeeee;
        }

        form {
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
            max-width: 400px;
            width: 90%;
            text-align: center;
        }

        h1 {
            margin-bottom: 3rem;
            color: #1a75cf;
            font-size: 2rem;
        }

        h2 {
            margin-bottom: 1.5rem;
            color: #f9b20d;
            font-size: 1.8rem;
        }

        .form-group {
            margin-bottom: 1rem;
            text-align: left;
        }

        label {
            font-weight: bold;
            color: #555;
        }

        .form-control {
            width: 100%;
            padding-top: 0.4rem;
            padding-bottom: 0.4rem;
            margin-top: 0.5rem;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
        }

        .form-control:focus {
            border-color: #eeaa0d;
            outline: none;
            box-shadow: 0px 0px 5px rgba(0, 123, 107, 0.5);
        }

        button[type="submit"] {
            width: 100%;
            padding: 0.8rem;
            font-size: 1.1rem;
            font-weight: bold;
            background-color: #0b8e36;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 1rem;
        }

        button[type="submit"]:hover {
            background-color: #0b792f;
        }

        .alert {
            margin-top: 1rem;
            padding: 0.75rem;
            background-color: #f8d7da;
            color: #842029;
            border: 1px solid #f5c2c7;
            border-radius: 5px;
        }

        .icon {
            margin-right: 0.5rem;
            color: #f9b20d;
        }

        .logo {
            max-width: 200px; 
            width: 100%; 
            margin-bottom: 1.5rem;
        }

        .form-control.is-invalid {
            border-color: red;
        }
    </style>

</head>
<body>

    <form method="post">
        <img src="@Url.Content("~/img/logo.png")" alt="Logo" class="logo">
        <h2 ><i class="fas fa-user-circle icon"></i>Inicio de sesión</h2>
        <div class="form-group">
            <label for="correo">Usuario</label>
            <input type="text" asp-for="User" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="Contraseña">Contraseña</label>
            <input type="password" asp-for="Password" class="form-control" required />
        </div>
        <button type="submit">Iniciar Sesión</button>
        @if (!string.IsNullOrEmpty(Model.MensajeError)) {
            <div class="alert">@Model.MensajeError</div>
        }
    </form>

    
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const inputUser = document.getElementById('User');
            const inputPassword = document.getElementById('Password');
            const form = document.querySelector('form');

            inputUser.addEventListener('input', function() {
                if (inputUser.value === '') {
                    inputUser.classList.add('is-invalid');
                } else {
                    inputUser.classList.remove('is-invalid');
                }
            });

            inputPassword.addEventListener('input', function() {
                if (inputPassword.value.length < 4) {
                    inputPassword.classList.add('is-invalid');
                } else {
                    inputPassword.classList.remove('is-invalid');
                }
            });

            form.addEventListener('submit', function(event) {
                let allValid = true;

                if (inputUser.value === '') {
                    inputUser.classList.add('is-invalid');
                    allValid = false;
                }
                if (inputPassword.value.length < 4) {
                    inputPassword.classList.add('is-invalid');
                    allValid = false;
                }

                if (!allValid) {
                    event.preventDefault();
                } else {
                    if (inputUser.value == "eyden@gmail.com" && inputPassword.value == "1234") {
                        return true;
                    } else if (inputUser.value == "elder@gmail.com" && inputPassword.value == "12345679") {
                        return true;
                    } else if (inputUser.value == "brasly@gmail.com" && inputPassword.value == "12345671") {
                        return true;
                    } else {
                        Swal.fire({
                            title: 'Error',
                            text: 'Credenciales Incorrectas',
                            icon: 'error',
                            button: 'Aceptar',
                        });
                        event.preventDefault();
                    }
                }
            });
        });

    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>

</body>
</html>
