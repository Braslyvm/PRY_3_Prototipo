@page
@model inicio_secionModel
@{
    ViewData["Title"] = "Inicio de sesión";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #e3f2f5;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: #333;
        }

        .container {
            width: 90%;
            max-width: 380px;
            padding: 25px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            text-align: center;
        }

        h1 {
            font-size: 2.5rem;
            color: #1a1a1a;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }

        label {
            font-size: 1rem;
            color: #555;
            margin-bottom: 5px;
            display: inline-block;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 1rem;
            transition: border-color 0.3s;
        }

        input[type="text"]:focus,
        input[type="password"]:focus {
            border-color: #1f45ad;
            outline: none;
        }

        button {
            width: 100%;
            padding: 12px;
            background-color: #1f45ad;
            color: #fff;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        button:hover {
            background-color: #f8ee8f;
            transform: scale(1.02);
        }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            padding: 10px;
            border-radius: 6px;
            margin-top: 15px;
            font-size: 0.9rem;
        }

        .language-selector {
            position: absolute;
            top: 20px;
            right: 20px;
            font-size: 0.9rem;
        }
        
        .language-selector select {
            padding: 5px;
            border-radius: 4px;
            border: 1px solid #ccc;
            background-color: #ffffff;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Inicio de sesión</h1>
        <form method="post">
            <div class="form-group">
                <label for="correo">Correo</label>
                <input type="text" asp-for="correo" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="Contraseña">Contraseña</label>
                <input type="password" asp-for="Contraseña" class="form-control" required />
            </div>
            <button type="submit">Iniciar sesión</button>
            @if (!string.IsNullOrEmpty(Model.MensajeError)) {
                <div class="alert alert-danger">@Model.MensajeError</div>
            }
        </form>
    </div>
</body>
</html>
