@page
@model PRY_3.Pages.servicio
@{
    ViewData["Title"] = "Gestión de Usuarios";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mostrar Imagen</title>
    <style>
        /* Establece el fondo blanco para toda la página */
        body {
            background-color: white;
            margin: 0;
            padding: 0;
        }

        /* Establece que la imagen se ajuste al tamaño de la pantalla manteniendo la proporción */
        img {
            width: 100%;            /* La imagen ocupará todo el ancho de la pantalla */
            min-height: 100vh;      /* La imagen ocupará al menos toda la altura de la pantalla */
            object-fit: contain;    /* Mantiene la proporción de la imagen sin recortarla */
            display: block;         /* Elimina el espacio en blanco debajo de la imagen */
            max-width: 100%;        /* Asegura que la imagen no se haga más grande que la pantalla */
            max-height: 100vh;      /* Asegura que la imagen no se haga más grande que la altura de la pantalla */
        }
    </style>
</head>
<body>
    <img src="@Url.Content("~/img/servicios.png")" alt="Servicios" />
</body>
</html>
