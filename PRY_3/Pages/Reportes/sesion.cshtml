@page
@model PRY_3.Pages.sesion
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mostrar Imagen</title>
    <style>
        /* Establece el fondo blanco para toda la página */
        body {
            background-color: white;
            margin: 0;
            padding: 0;
            overflow: hidden; /* Oculta el scroll */
        }

        /* Establece que la imagen se ajuste al tamaño de la pantalla */
        img {
            width: 100%;           /* La imagen ocupará todo el ancho de la pantalla */
            height: 100vh;         /* La imagen ocupará toda la altura de la pantalla */
            object-fit: contain;   /* La imagen se adapta sin recortarse */
            display: block;        /* Elimina el espacio en blanco debajo de la imagen */
            max-width: 100%;       /* Asegura que la imagen no se haga más grande que la pantalla */
            max-height: 100vh;     /* Asegura que la imagen no sobrepase la altura de la pantalla */
        }
    </style>
</head>
<body>
    <img src="@Url.Content("~/img/sesion.png")" alt="Servicios" />
</body>
</html>
